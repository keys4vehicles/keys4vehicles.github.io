{% include "widgets/info.njk" %}
<div class="row justify-content-center">
{% for post in postslist | reverse %}
  <div class="col-md-4 p-3">
    <a href="{{ post.url | url }}" title="{{metadata.title}} {{ post.data.title }}" class="p-3">
    {% if post.data.cover %}<img class="img-fluid cover" width="100%" height="100%" alt="{{metadata.title}} {{ post.data.title }}" loading="lazy" src="{{ post.data.cover }}"/>{% endif %}
    <div class="p-3">
    <h3><strong>{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
    </strong></h3>
    <p class="text-dark">{% if post.data.description %}{{ post.data.description }}{% endif %}</p>
    </div>
    </a>
  </div>
{% endfor %}
</div>
